// measure amount of beans
beans = read(1);
// measure amount of water
water = read(2);
while(true) {
    fork {
        button_left = read(11);
        if(button_left > 0) {
            beans = read(1);
            water = read(2);
            if(beans > 30 && water > 200) {
                // take beans to the left brewing chamber
                write(13, 300);
                // pour water through beans
                write(14, 200);
            } else {
                if(beans <= 30) {
                    // turn on missing beans indicator
                    write(3, 100);
                } else { skip; };
                if(water <= 200) {
                    // turn on missing water indicator
                    write(4, 100);
                } else { skip; };
            };
        } else { skip; };
    } and {
        button_right = read(21);
        if(button_right > 0) {
            beans = read(1);
            water = read(2);
            if(beans > 30 && water > 200) {
                // take beans to the left brewing chamber
                write(23, 300);
                // pour water through beans
                write(24, 200);
            } else {
                if(beans <= 30) {
                    // turn on missing beans indicator
                    write(3, 100);
                } else { skip; };
                if(water <= 200) {
                    // turn on missing water indicator
                    write(4, 100);
                } else { skip; };
            };
        } else { skip; };
    };
};
